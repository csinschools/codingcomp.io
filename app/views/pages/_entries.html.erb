<% if entries.to_a.none? %>
  <div class="alert alert-primary" role="alert">
    No entries yet.  Please check again soon!
  </div>
<% else %>
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th style="width: 150px">Author</th>
      <th style="width: 150px">School</th>
    </tr>
    </thead>
    <tbody>
    <% entries.each do |submission| %>
      <tr>
        <td><%= link_to submission.name, submission.url, target: "_blank" %></td>
        <td><%= submission.author %></td>
        <td><%= submission.school %></td>
      </tr>
    <% end %>
    </tbody>
